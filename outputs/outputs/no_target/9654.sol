pragma solidity ^0.8.0;
interface IERC20 { function transfer(address recipient, uint256 amount) external returns (bool); function allowance(address owner, address spender) external view returns (uint256); function approve(address spender, uint256 amount) external returns (bool); function totalSupply() external view returns (uint256); function mint(address to, uint256 amount) external returns (bool); function burn(address from, uint256 amount) external returns (bool); event Mint(address indexed to, uint256 amount); event Burn(address indexed from, uint256 amount); }
